
import graph2, config, pdb
import random, csv, pickle
import numpy as np

def get_enron_data():

    edges = []
    nodes = set()
    
    with open(config.enron_email_data, 'rb') as f:
        lines = f.readlines()

        for line in lines[4:]:
            lineA = line.split()
            i = int(lineA[0])
            j = int(lineA[1])

            theta1 = get_node_theta(i)
            theta2 = get_node_theta(j)
            p = get_edge_prob(i, j)
            
            edges.append((i, j, p))
            nodes.append((i, theta1))
            nodes.append((j , theta2))

    if len(nodes) - 1 != max(nodes):
        pdb.set_trace()

    return edges, len(nodes)
